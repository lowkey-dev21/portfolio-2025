---
import { AstroFont } from "astro-font";
import '../styles/global.css';
import Header from "../components/ui/Headers.astro";
import Footer from "../components/ui/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Lowkey</title>
		 <AstroFont
            config={[
                {
                    src: [],
                    name: "Raleway",
                    googleFontsURL: 'https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap',
                    preload: true,
                    display: "swap",
                    selector: "body",
                    fallback: "sans-serif",
                },
            ]}
        />
	</head>
	<body class="px-[1.5rem]">
    <Header />
		<slot />
    <Footer/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
